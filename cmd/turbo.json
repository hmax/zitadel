{
    "extends": ["//"],
    "tasks": {
      "generate": {
        "outputs": ["../.artifacts/**", "**/statik/statik.go"],
        "inputs": ["../proto/**", "../buf.gen.yaml", "../internal/api/ui/login/static/**", "../internal/notification/static/**", "../internal/static/**"],
        "cache": false
      },
      "build": {
        "dependsOn": ["generate", "console#build"],
        "outputs": ["../zitadel"],
        "cache": false
      },
      "test": {
        "dependsOn": ["test:unit", "test:integration"]
      },
      "test:unit": {
        "dependsOn": ["generate"],
        "outputs": ["../profile.cov"],
        "cache": false
      },
      "test:integration": {
        "dependsOn": ["generate"],
        "outputs": ["../zitadel.test"],
        "cache": false
      },
      "clear": {
        "cache": false
      }
  }
}