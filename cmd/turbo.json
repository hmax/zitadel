{
    "extends": ["//"],
    "tasks": {
      "generate": {
        "outputs": ["../pkg/grpc/**/*.pb.**", "../openapi/v2/zitadel/**", "../**/statik/statik.go", "../internal/api/assets/authz.go", "../internal/api/assets/router.go"],
        "inputs": ["../cmd/turbo.json", "../cmd/package.json", "../proto/**", "../buf.gen.yaml", "../internal/api/ui/login/static/**", "../internal/notification/static/**", "../internal/static/**"],
        "cache": true
      },
      "build": {
        "dependsOn": ["generate", "console#build"],
        "outputs": ["../zitadel"],
        "inputs": ["!../console/**", "!../docs"],
        "cache": true
      },
      "test": {
        "dependsOn": ["test:unit", "test:integration"]
      },
      "test:unit": {
        "dependsOn": ["generate", "console#build"],
        "outputs": ["../profile.cov"],
        "inputs": ["!../console/**", "!../docs"],
        "cache": true
      },
      "test:integration": {
        "dependsOn": ["generate", "console#build"],
        "outputs": ["../zitadel.test", "../tmp/**"],
        "inputs": ["!../console/**", "!../docs"],
        "cache": true
      },
      "lint": {
        "dependsOn": ["generate", "console#build"],
        "inputs": ["!../console/**", "!../docs"],
        "cache": true
      },
      "clear": {
        "cache": false
      }
  }
}