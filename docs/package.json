{
  "name": "@zitadel/docs",
  "private": true,
  "scripts": {
    "docusaurus": "docusaurus",
    "start": "docusaurus start",
    "build": "docusaurus build",
    "swizzle": "docusaurus swizzle",
    "deploy": "docusaurus deploy",
    "clear": "docusaurus clear && rm -rf static/apis && rm -rf .artifacts",
    "serve": "docusaurus serve",
    "generate": "pnpm run generate:proto && npm run generate:current && npm run generate:deprecated",
    "generate:proto": "buf generate ../proto",
    "generate:current": "swagger2openapi --outfile .artifacts/apis/current.json .artifacts/apis/current.swagger.json && redocly join --without-x-tag-groups ./openapi/current.yaml .artifacts/apis/current.json -o static/apis/current.json",
    "generate:deprecated": "swagger2openapi --outfile .artifacts/apis/deprecated.json .artifacts/apis/deprecated.swagger.json && redocly join --without-x-tag-groups ./openapi/deprecated.yaml .artifacts/apis/deprecated.json -o static/apis/deprecated.json"
  },
  "dependencies": {
    "@bufbuild/buf": "^1.49.0",
    "@docusaurus/core": "^3.7.0",
    "@docusaurus/faster": "^3.7.0",
    "@docusaurus/plugin-sitemap": "^3.7.0",
    "@docusaurus/preset-classic": "^3.7.0",
    "@docusaurus/theme-mermaid": "^3.7.0",
    "@docusaurus/theme-search-algolia": "^3.7.0",
    "@headlessui/react": "^2.2.0",
    "@heroicons/react": "^2.0.13",
    "@scalar/docusaurus": "^0.4.184",
    "autoprefixer": "^10.4.20",
    "clsx": "^2.0.0",
    "docusaurus-plugin-image-zoom": "^2.0.0",
    "docusaurus-plugin-openapi-docs": "4.3.1",
    "docusaurus-theme-github-codeblock": "^2.0.2",
    "docusaurus-theme-openapi-docs": "4.3.1",
    "postcss": "^8.4.49",
    "prism-react-renderer": "^2.3.0",
    "raw-loader": "^4.0.2",
    "react": "^19.0.0",
    "react-copy-to-clipboard": "^5.1.0",
    "react-dom": "^19.0.0",
    "react-google-charts": "^5.2.1",
    "react-player": "^2.16.0",
    "redocusaurus": "^2.2.1",
    "wait-on": "6.0.1"
  },
  "browserslist": {
    "production": [
      ">0.5%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@docusaurus/module-type-aliases": "^3.7.0",
    "@docusaurus/types": "^3.7.0",
    "@redocly/cli": "^1.27.2",
    "swagger2openapi": "^7.0.8",
    "tailwindcss": "^3.4.17"
  }
}
