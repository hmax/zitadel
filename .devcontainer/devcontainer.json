{
  "name": "zitadel",
  "dockerComposeFile": "docker-compose.yml",
  "service": "devcontainer",
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
  "features": {
    "ghcr.io/devcontainers/features/go:1": {
      "version": "1.23.6",
      "golangciLintVersion": "1.63.4"
    },
    "ghcr.io/devcontainers/features/node:1": {
      "version": "22.13.1",
      "pnpmVersion": "10.2.1"
    },
    "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {},
    "ghcr.io/devcontainers-extra/features/prettier:1": {},
    "ghcr.io/jungaretti/features/make:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "github.vscode-github-actions",
        "ms-vscode.makefile-tools",
        "hashicorp.terraform",
        "zxh404.vscode-proto3",
        "mutantdino.resourcemonitor",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "github.copilot",
        "github.copilot-chat",
        "golang.go",
        "ms-vscode.makefile-tools",
        "unifiedjs.vscode-mdx"
      ]
    }
  },
  "forwardPorts": [
    3000,
    4200,
    8080
  ],
  "remoteEnv": {
    "PATH": "${containerEnv:PATH}:/home/vscode/go/bin",
    "TURBO_API": "${localEnv:TURBO_API}",
    "TURBO_TOKEN": "${localEnv:TURBO_TOKEN}",
    "TURBO_TEAM": "${localEnv:TURBO_TEAM}"
  },
  "onCreateCommand": "sudo apt-get update && sudo apt-get install libnss-myhostname && npm install -g npm@11 sass@1.64.1",
  "postCreateCommand": "pnpm install && go mod download"
}